{
  "name": "proxpl",
  "displayName": "ProXPL Language Support",
  "description": "Syntax highlighting and language support for the ProXPL programming language",
  "version": "0.2.0",
  "publisher": "ProXentix",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProgrammerKR/ProXPL.git"
  },
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.107.0"
  },
  "icon": "logo.png",
  "activationEvents": [
    "onLanguage:proxpl"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "typescript": "^4.9.5"
  },
  "contributes": {
    "languages": [
      {
        "id": "proxpl",
        "aliases": [
          "ProXPL",
          "prox"
        ],
        "extensions": [
          ".prox",
          ".pxpl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "proxpl",
        "scopeName": "source.proxpl",
        "path": "./syntaxes/proxpl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "proxpl",
        "path": "./snippets/proxpl-snippets.json"
      }
    ],
    "commands": [
      {
        "command": "proxpl.run",
        "title": "ProXPL: Run File",
        "icon": "$(play)"
      },
      {
        "command": "proxpl.startWatchMode",
        "title": "ProXPL: Toggle Watch Mode",
        "icon": "$(eye)"
      }
    ],
    "keybindings": [
      {
        "command": "proxpl.run",
        "key": "ctrl+f5",
        "mac": "cmd+f5",
        "when": "editorTextFocus && resourceLangId == proxpl"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .prox",
          "command": "proxpl.run",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .prox",
          "command": "proxpl.run",
          "group": "navigation"
        }
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ProgrammerKR/ProXPL/issues"
  },
  "homepage": "https://github.com/ProgrammerKR/ProXPL#readme"
}