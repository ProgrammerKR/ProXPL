{
  "name": "proxpl",
  "displayName": "ProXPL Language Support",
  "description": "Syntax highlighting and language support for the ProXPL programming language",
  "version": "1.0.0",
  "publisher": "ProgrammerKR",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProgrammerKR/ProXPL"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:proxpl"
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "16.x",
    "typescript": "^4.9.5",
    "eslint": "^8.36.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "proxpl",
        "aliases": [
          "ProXPL",
          "prox"
        ],
        "extensions": [
          ".prox"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "proxpl",
        "scopeName": "source.proxpl",
        "path": "./syntaxes/proxpl.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "proxpl",
        "path": "./snippets/proxpl-snippets.json"
      }
    ],
    "commands": [
      {
        "command": "proxpl.runFile",
        "title": "ProXPL: Run File",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .prox",
          "command": "proxpl.runFile",
          "group": "navigation"
        }
      ]
    }
  }
}