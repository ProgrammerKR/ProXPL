// async_test.pxpl

async func add(a, b) {
    return a + b;
}

async func mainAsync() {
    print("Start Async");
    var t1 = add(10, 20);
    print("Task created");
    var res = await t1;
    print("Result: " + res);
}

func main() {
    print("Main Sync");
    var t = mainAsync();
    await t; // Sync await (blocking)
    print("Done");
}
